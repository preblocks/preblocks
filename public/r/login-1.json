{
  "$schema": "https://ui.shadcn.com/schema/registry-item.json",
  "name": "login-1",
  "type": "registry:block",
  "title": "Simple Login Card",
  "description": "A clean, centered login card with email/password authentication and social login options. Features a professional layout with clear hierarchy and premium styling.",
  "dependencies": ["@tabler/icons-react"],
  "registryDependencies": ["button", "card", "input", "field"],
  "files": [
    {
      "path": "src/registry/react/login/one.tsx",
      "content": "import { IconBrandGithub, IconBrandGoogleFilled } from '@tabler/icons-react'\nimport { Button } from '@/components/ui/button'\nimport {\n  Card,\n  CardContent,\n  CardDescription,\n  CardFooter,\n  CardHeader,\n  CardTitle,\n} from '@/components/ui/card'\nimport { Field, FieldContent, FieldLabel } from '@/components/ui/field'\nimport { Input } from '@/components/ui/input'\n\nexport default function LoginOne() {\n  return (\n    <section className=\"flex items-center justify-center p-4\">\n      <Card className=\"w-full max-w-md shadow-lg pb-0\">\n        <CardHeader className=\"items-center text-center\">\n          <CardTitle className=\"text-2xl\">Welcome back</CardTitle>\n          <CardDescription>\n            Enter your credentials to access your account\n          </CardDescription>\n        </CardHeader>\n\n        <CardContent className=\"space-y-4\">\n          <Field>\n            <FieldLabel htmlFor=\"email\">Email</FieldLabel>\n            <FieldContent>\n              <Input\n                id=\"email\"\n                placeholder=\"name@example.com\"\n                type=\"email\"\n                autoCapitalize=\"none\"\n                autoComplete=\"email\"\n                autoCorrect=\"off\"\n              />\n            </FieldContent>\n          </Field>\n\n          <Field>\n            <div className=\"flex items-center justify-between\">\n              <FieldLabel htmlFor=\"password\">Password</FieldLabel>\n              <a\n                href=\"#\"\n                className=\"text-sm font-medium text-muted-foreground hover:text-primary transition-colors\"\n              >\n                Forgot password?\n              </a>\n            </div>\n            <FieldContent>\n              <Input id=\"password\" type=\"password\" />\n            </FieldContent>\n          </Field>\n\n          <Button className=\"w-full\">Sign in</Button>\n\n          <div className=\"relative flex justify-center items-center w-full\">\n            <div className=\"border-border absolute h-px w-full border-t\" />\n            <span className=\"bg-card text-muted-foreground relative px-2 text-xs\">\n              Or continue with\n            </span>\n          </div>\n\n          <div className=\"grid grid-cols-2 gap-4\">\n            <Button variant=\"outline\" className=\"w-full\">\n              <IconBrandGithub className=\"size-4\" />\n              Github\n            </Button>\n            <Button variant=\"outline\" className=\"w-full\">\n              <IconBrandGoogleFilled className=\"size-4\" />\n              Google\n            </Button>\n          </div>\n        </CardContent>\n\n        <CardFooter className=\"justify-center bg-muted/50 [.border-t]:py-3 border-t\">\n          <p className=\"text-sm text-muted-foreground\">\n            Don't have an account?{' '}\n            <a href=\"#\" className=\"font-semibold text-primary hover:underline\">\n              Sign up\n            </a>\n          </p>\n        </CardFooter>\n      </Card>\n    </section>\n  )\n}\n",
      "type": "registry:component"
    }
  ],
  "categories": ["login"]
}
